{
	"manifest_version": 2,
	"name": "City Life Навигатор",
	"short_name": "CL-Навигатор",
	"description": "Приложение для мониторинга кэшбэка среди наших партнёров. Удобный интерфейс. Личный кабинет. Поиск кэшбэка. Акции.",
	"version": "2.1.5",
	"icons": {
		"16": "img/icon-16x16.png",
		"32": "img/icon-32x32.png",
		"48": "img/icon-48x48.png",
		"128": "img/icon-128x128.png"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"cookies",
		"*://*/*"
	],
	"background": {
		"persistent": true,
		"scripts": ["js/punycode.js", "js/main.js", "js/background.js"]
	},
	"browser_action": {
		"default_title": "City Life Navigator",
		"default_icon": "img/main.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"css": ["styles/modal.css"],
			"js": ["js/punycode.js", "js/main.js", "js/content.js"],
			"run_at":     "document_start"
		}
	]

}
